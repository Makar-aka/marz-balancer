# Интервал опроса в секундах
POLL_INTERVAL=5

# Порт для запуска приложения
APP_PORT=8023

# Вариант 1: задаём nodes как JSON-строку (удобно для docker-compose)
# Пример:
# NODES_JSON=[{"name":"marz_node_1","url":"http://127.0.0.1:9001","clients_path":"/api/clients","timeout":5}]
NODES_JSON=[{"name":"marz_node_1","url":"http://127.0.0.1:9001","clients_path":"/api/clients","timeout":5},{"name":"marz_node_2","url":"http://127.0.0.1:9002","clients_path":"/api/clients","timeout":5}]

# Вариант 2: или указываем файл с конфигом (альтернатива NODES_JSON)
# NODES_FILE=./nodes.json

# Пример авторизации для материнского сервера (Basic Auth)
# SERVER_AUTH_JSON={"username":"admin","password":"secret"}

# Пример per-node auth (в NODES_JSON): {"auth":{"type":"basic","username":"nodeuser","password":"nodepass"}}
# Или: {"auth":{"type":"bearer","token":"TOKEN"}}

# Перечислить candidate paths через запятую (опционально)
# CANDIDATE_PATHS=/api/clients,/clients,/status

# Значение по умолчанию для timeout нод (если не задано в node)
# NODE_DEFAULT_TIMEOUT=5